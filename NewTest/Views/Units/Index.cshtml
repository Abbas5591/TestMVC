@model IEnumerable<NewTest.Models.Units>
@{
    ViewData["Title"] = "Unit List";
}

<h2>Unit List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var unit in Model)
        {
            <tr>
                <td>@unit.Id</td>
                <td>@unit.Name</td>
                <td>
                    <!-- Delete button -->
                    <form asp-action="Delete" asp-route-id="@unit.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this unit?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
